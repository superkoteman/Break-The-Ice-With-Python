def fact(number):
    try:
        number = int(number)
        if number == 0:
            return 1
        elif number < 0:
            return fact(int(input("Number have to be positive: ")))
        else:
            return number * fact(number - 1)
    except:
        return fact(input("Please, enter a number: "))


print(fact(input("Please, enter a positive number to calculate its factorial: ")))
